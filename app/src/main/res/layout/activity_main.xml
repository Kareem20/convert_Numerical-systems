<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

        <Button
            android:id="@+id/binToDec_button"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/colorPrimary"
            android:text="Binary To decimal."
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            />
    <Button
        android:id="@+id/HaxToDec_button"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/colorPrimary"
        android:text="Hax To decimal."
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        />
    <Button
        android:id="@+id/OctToDec_button"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/colorPrimary"
        android:text="Octal To decimal."
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        />


    <Button
        android:id="@+id/decToBinHaxOct_button"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical|center_horizontal"
        android:text="Decimal to binary,Hax,Octal."
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAllCaps= "false"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        />




</LinearLayout>